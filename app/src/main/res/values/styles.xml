<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OnColoredBack">
        <item name="android:textColor">@color/md_white_1000</item><!-- no need in TextInputLayout -->
        <item name="android:textCursorDrawable">@null</item><!-- no need in TextInputLayout -->
    </style>

    <style name="OnColoredBack.TextInputLayout">
        <item name="android:textColorHint">@color/md_white_1000</item>
        <item name="android:backgroundTint">@color/md_white_1000</item>
        <item name="colorControlActivated">@color/md_white_1000</item>
    </style>

    <style name="ErrorOnBackAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_on_back</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
